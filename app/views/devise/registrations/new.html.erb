<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form_horizontal'}) do |f| %>
  <%= f.error_notification %>

  <!-- Form fields -->
  <%= f.input :name %>
	<%= f.input :email %>
	<%= f.input :image, label: "Upload a profile picture" %>
	<%= f.input :password %>
	<%= f.input :password_confirmation %>
	<!-- Submit button -->
	<div class="form-actions">
		<%= f.submit "Sign up", class: "btn btn-primary" %>
	</div>

<% end %>

<%= render "devise/shared/links" %>